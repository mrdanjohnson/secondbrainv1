# Database Configuration
POSTGRES_USER=secondbrain
POSTGRES_PASSWORD=secondbrain_secret
POSTGRES_DB=second_brain

# N8N Configuration
N8N_USER=admin
N8N_PASSWORD=secondbrain123
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Vector Embeddings Configuration (System-Wide)
# These settings apply to ALL memories. Changing them requires re-embedding existing data.
EMBEDDING_PROVIDER=openai  # Options: 'openai' or 'ollama'
EMBEDDING_MODEL=text-embedding-3-small  # OpenAI: text-embedding-3-small, text-embedding-3-large | Ollama: nomic-embed-text, etc.

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Application
NODE_ENV=development

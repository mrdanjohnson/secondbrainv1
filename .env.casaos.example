# Second Brain - CasaOS Environment Configuration
# =================================================
# Copy this file to .env and update with your actual values
# Place .env in /DATA/Apps/secondbrainv1/ directory

# Database Configuration
POSTGRES_USER=secondbrain
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=second_brain

# N8N Configuration
N8N_USER=admin
N8N_PASSWORD=CHANGE_THIS_N8N_PASSWORD
N8N_WEBHOOK_URL=http://YOUR_CASAOS_IP:5679/webhook

# AI API Keys
# At least one is required - OpenAI or Anthropic
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Vector Embeddings Configuration (System-Wide)
# ⚠️ IMPORTANT: These settings apply to ALL memories. 
# Changing them requires re-embedding existing data.
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# Security
# ⚠️ CRITICAL: Change this to a strong random string
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARS

# Application
NODE_ENV=production

# Frontend API URL
# Replace YOUR_CASAOS_IP with your actual CasaOS server IP address
VITE_API_URL=http://YOUR_CASAOS_IP:3101/api

# Optional: Ollama Configuration (for local LLMs)
OLLAMA_API_URL=http://ollama:11434

# Optional: Skip database setup on container restart
SKIP_DB_SETUP=false
